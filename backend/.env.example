# Example environment variables for the backend
# Fill these in a real .env file (never commit secrets)

# Option A: full DATABASE_URL
# DATABASE_URL=postgres://user:password@localhost:5432/your_db_name

# Option B: individual connection pieces
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=dbms_minmax

PORT=4000
UPLOAD_DIR=uploads

# Optional S3 remote storage (if set, files will be uploaded to S3 instead of local disk)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Max upload size in bytes (default 10MB)
MAX_FILE_SIZE=10485760
